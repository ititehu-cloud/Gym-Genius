{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, matching Firebase Auth UID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "address": {
          "type": "string",
          "description": "The gym's display address."
        }
      },
      "required": ["id", "displayName", "email"]
    },
    "Attendance": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Attendance",
      "type": "object",
      "description": "Represents a member's attendance record.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the attendance record."
        },
        "memberId": {
          "type": "string",
          "description": "Reference to Member. (Relationship: Member 1:N Attendance)"
        },
        "checkInTime": {
          "type": "string",
          "description": "Timestamp when the member checked in.",
          "format": "date-time"
        },
        "checkOutTime": {
          "type": "string",
          "description": "Timestamp when the member checked out.",
          "format": "date-time"
        }
      },
      "required": [
        "memberId",
        "checkInTime"
      ]
    },
    "Payment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Payment",
      "type": "object",
      "description": "Represents a payment made by a member.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the payment."
        },
        "memberId": {
          "type": "string",
          "description": "Reference to Member. (Relationship: Member 1:N Payment)"
        },
        "paymentDate": {
          "type": "string",
          "description": "Date when the payment was made.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "Amount paid by the member."
        },
        "paymentMethod": {
          "type": "string",
          "description": "Payment method used (e.g., cash, credit card)."
        },
        "paymentType": {
          "type": "string",
          "description": "The type of payment.",
          "enum": [
            "monthly",
            "renewal",
            "advance"
          ]
        },
        "invoiceNumber": {
          "type": "string",
          "description": "Invoice number for the payment."
        },
        "status": {
          "type": "string",
          "description": "The payment's current status.",
          "enum": [
            "paid",
            "pending"
          ]
        }
      },
      "required": [
        "id",
        "memberId",
        "paymentDate",
        "amount",
        "paymentMethod",
        "paymentType",
        "status"
      ]
    },
    "Plan": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Plan",
      "type": "object",
      "description": "Represents a gym membership plan.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the plan."
        },
        "name": {
          "type": "string",
          "description": "Name of the plan."
        },
        "description": {
          "type": "string",
          "description": "Description of the plan."
        },
        "price": {
          "type": "number",
          "description": "Price of the plan."
        },
        "duration": {
          "type": "number",
          "description": "Duration of the plan in months."
        }
      },
      "required": [
        "id",
        "name",
        "price",
        "duration"
      ]
    },
    "Member": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Member",
      "type": "object",
      "description": "Represents a gym member.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the member."
        },
        "memberId": {
          "type": "string",
          "description": "The member's custom display ID."
        },
        "name": {
          "type": "string",
          "description": "The member's full name."
        },
        "mobileNumber": {
          "type": "string",
          "description": "The member's mobile phone number."
        },
        "address": {
          "type": "string",
          "description": "The member's physical address."
        },
        "planId": {
          "type": "string",
          "description": "Reference to the selected Plan."
        },
        "joinDate": {
          "type": "string",
          "description": "The date the member joined.",
          "format": "date-time"
        },
        "expiryDate": {
          "type": "string",
          "description": "The date the membership expires.",
          "format": "date-time"
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the member's profile picture.",
          "format": "uri"
        },
        "status": {
          "type": "string",
          "description": "The member's current status.",
          "enum": [
            "active",
            "expired",
            "due"
          ]
        }
      },
      "required": [
        "id",
        "memberId",
        "name",
        "mobileNumber",
        "address",
        "planId",
        "joinDate",
        "expiryDate",
        "imageUrl",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile data. The user ID is used for authentication and authorization."
    },
    "/attendance/{attendanceId}": {
      "schema": {
        "$ref": "#/entities/Attendance"
      },
      "description": "Stores attendance records for members."
    },
    "/payments/{paymentId}": {
      "schema": {
        "$ref": "#/entities/Payment"
      },
      "description": "Stores payment information for members."
    },
    "/plans/{planId}": {
      "schema": {
        "$ref": "#/entities/Plan"
      },
      "description": "Stores gym membership plans."
    },
    "/members/{memberId}": {
      "schema": {
        "$ref": "#/entities/Member"
      },
      "description": "Stores gym member profiles."
    }
  }
}
